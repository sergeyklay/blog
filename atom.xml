---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.data.settings.basic_settings.site_description }}</title>
  <link href="{{ site.data.settings.basic_settings.site_baseurl }}/atom.xml" rel="self"/>
  <link href="{{ site.data.settings.basic_settings.site_baseurl }}/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.data.settings.basic_settings.site_baseurl }}</id>
  <author>
    <name>{{ site.data.settings.author.name }}</name>
    <email>{{ site.data.settings.author.email }}</email>
  </author>

  {% for post in site.posts %}
    <entry>
      <title>{{ post.title }}</title>
      <link href="{{ site.url }}{{ post.url }}"/>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <id>{{ site.data.settings.basic_settings.site_baseurl }}{{ post.id }}</id>
      <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
  {% endfor %}
</feed>
