---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title type="text"><![CDATA[{{ site.name }}]]></title>
  {% if site.description %}
    <subtitle type="text">
      <![CDATA[{{ site.description }}]]>
    </subtitle>
  {% endif %}

  <link rel="alternate"
        type="text/html"
        hreflang="ru"
        href="{{ site.url }}{{ site.baseurl }}/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>

  <id>{{ site.url }}</id>
  <link type="application/atom+xml"
        href="{{ site.url }}{{ site.baseurl }}/atom.xml"
        rel="self"/>

  <author>
    <name><![CDATA[{{ site.author.name }}]]></name>
    <email>
      {{ site.author.email | replace: ".no-spam.", "@" }}
      </email>
  </author>

  <rights>
    Copyright (c) {{ site.time | date: "%Y" }} {{ site.author.name }}
  </rights>
  <generator uri="http://jekyllrb.com/" version="3.8.6">
    Jekyll
  </generator>

  {% for post in site.posts limit:20 %}
    <entry>
      <title type="html"><![CDATA[{{ post.title }}]]></title>
      <link rel="alternate"
            type="text/html"
            href="{{ site.url }}{{ post.url }}"/>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <id>{{ site.url }}{{ site.baseurl }}{{ post.id }}</id>
      <summary type="text">
        {{ post.excerpt | strip_html }}
      </summary>
      <content type="html">
        {{ post.content | xml_escape }}
      </content>
      <author>
        {% if post.author %}
          <name><![CDATA[{{ post.author }}]]></name>
        {% else %}
          <name><![CDATA[{{ site.author.name }}]]></name>
          <email>
            {{ site.author.email | replace: ".no-spam.", "@" }}
          </email>
        {% endif %}
      </author>
    </entry>
  {% endfor %}

</feed>
