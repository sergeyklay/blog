# editorconfig.org
root                     = true

[*]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
charset                  = utf-8
indent_size              = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{svg,css,scss,js,json,webmanifest,yaml,yml,toml,md,ecrc,gitattributes}]
indent_size              = 2

[layouts/**.{svg}]
insert_final_newline     = false

[{go.mod,go.sum,*.go}]
indent_style             = tab
indent_size              = 4
